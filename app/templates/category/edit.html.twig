    <div class="container">
    <div class="row">
    <div class="col-1"></div>
    <div class="col-10 main-content">

    <h1>{{ 'title.category_edit'|trans({'%id%': category.id|default('')}) }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
